<form asp-action="Rate">
    <div class="form-group">
        <input asp-for="Rating.PostId" class="form-control" type="hidden" />
        <label asp-for="Rating.Score" class="control-label">Rate this post:</label>
        <input asp-for="Rating.Score" class="form-control" type="range" list="tickmarks" min="0" max="100" step="1" />
        <datalist id="tickmarks">
            <option value="0" label="Aweful" />
            <option value="10" />
            <option value="20" />
            <option value="30" />
            <option value="40" />
            <option value="50" label="So-So" />
            <option value="60" />
            <option value="70" />
            <option value="80" />
            <option value="90" />
            <option value="100" label="Awesome" />
        </datalist>
        <span asp-validation-for="Rating.Score" text-danger"></span>
        <input type="submit" value="Submit Rating" class="btn btn-default" />
    </div>
</form>
